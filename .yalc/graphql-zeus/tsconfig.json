{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "incremental": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strict": true,
    "outDir": "./lib",
    "lib": ["es6", "es7", "esnext", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src/",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "exclude": ["lib", "node_modules", "docs", "__tests__", "generated", "examples"]
}
